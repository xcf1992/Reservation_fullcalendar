<!-- modal used to get inforamtion of taken appointments -->
<div id="reservationModal"  class="modal fade" tabindex='-1'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="modalTitle2" class="modal-title"></h4>
            </div>
              <div id="modalBody2" class="modal-body">
                  
                  <div class="control-group">
                    <label class="control-label" for="title">Title: </label> <%= @event.title %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="description">Description: </label> <%= @event.description %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="from">From: </label> <%= @event.start_time.to_s(:full_time) %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="To">To: </label> <%= @event.end_time.to_s(:full_time) %>
                  </div>

                  <h4><b>Client Information:</b></h4>
                  <div class="control-group">
                    <label class="control-label" for="first_name">First Name: </label> <%= @reservation.first_name %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="last_name">Last Name: </label> <%= @reservation.last_name %>
                  </div>
                  
                  <div class="control-group">
                    <label class="control-label" for="email">Email Address: </label> <%= @reservation.email %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="phone">Phone Number: </label> <%= @reservation.phone_number %>
                  </div>

                  <div class="control-group">
                    <label class="control-label" for="zip">Zip Code: </label> <%= @reservation.zip_code %>
                  </div>
              </div>
              
              <div class="modal-footer">
                <%= link_to 'Drop This Appointment',  @reservation,  :class => "btn btn-primary", method: :delete, data: { confirm: 'Are you sure?' } %>
                <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
              </div>  
        </div>
    </div>
</div>